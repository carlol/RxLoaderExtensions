<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
            android:id="@+id/btnLoaderTriggerView_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custom DialogFragment loading (1)"/>

    <Button
            android:id="@+id/btnLoaderTriggerView_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custom DialogFragment loading (2)"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/btnLoaderTriggerView_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage contextual loading view"/>

        <com.github.ybq.android.spinkit.SpinKitView
                android:id="@+id/customLoaderView"
                style="@style/SpinKitView.Small.CubeGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                app:SpinKit_Color="@color/colorAccent"/>

    </LinearLayout>

</LinearLayout>